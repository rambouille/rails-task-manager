<div class="container">
  <h1>My tasks</h1>

  <% @tasks.each do |task| %>
    <p>
      <% if task.completed %>
        <i class="far fa-check-square"></i>
      <% else %>
        <i class="far fa-square"></i>
      <% end %>
      <%= link_to task.title, task_path(task) %>
      <%= link_to "", task_path(task), method: :delete, data: { confirm: "Are you sure to delete #{task.title} ?" }, class:'fas fa-trash-alt' %>
    </p>
  <% end %>
  <br>
  <hr>
  <!-- <i class="fas fa-trash-alt"></i> -->

  <%= link_to "Add a new task", new_task_path %>

</div>

